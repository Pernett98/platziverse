{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "A Simple IoT Platform - Web Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "export NODE_ENV=production && node server.js",
    "prestart": "npm run build",
    "start-dev": "export DEBUG=platziverse:* && nodemon server.js",
    "prestart-dev": "npm run build",
    "build": "browserify -t babelify -t vueify client/app.js -o public/bundle.js",
    "lint": "standard"
  },
  "author": "",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "nodemon": "^1.18.4",
    "standard": "^12.0.1",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "chart.js": "^2.6.0",
    "debug": "^4.0.1",
    "express": "^4.16.3",
    "express-asyncify": "^1.0.0",
    "moment": "^2.22.2",
    "platziverse-agent": "file:../platziverse-agent",
    "platziverse-utils": "file:../platziverse-utils",
    "random-material-color": "^1.0.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "vue": "^2.4.2",
    "vue-chartjs": "^2.8.1"
  }
}
